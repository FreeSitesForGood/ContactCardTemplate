<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ name }}</title>
  <link href="/output.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body class="bg-white text-gray-800 font-sans p-8 max-w-xl mx-auto">
  <h1 class="text-3xl font-bold mb-4">{{ name }}</h1>

  {% if email %}<p>Email: <a href="mailto:{{ email }}" class="text-blue-600 underline">{{ email }}</a></p>{% endif %}
  {% if phone %}<p>Phone: <a href="tel:{{ phone }}" class="text-blue-600 underline">{{ phone }}</a></p>{% endif %}

  <ul class="mt-4 space-y-2">
    {% if facebook %}
      {% set fb_link = facebook %}
      {% if not facebook.startswith('http') %}{% set fb_link = 'https://facebook.com/' + facebook %}{% endif %}
      <li><a href="{{ fb_link }}" class="text-blue-600 flex items-center gap-2"><i class="fab fa-facebook"></i>Facebook</a></li>
    {% endif %}
    {% if instagram %}
      {% set ig_link = instagram %}
      {% if not instagram.startswith('http') %}{% set ig_link = 'https://instagram.com/' + instagram %}{% endif %}
      <li><a href="{{ ig_link }}" class="text-pink-600 flex items-center gap-2"><i class="fab fa-instagram"></i>Instagram</a></li>
    {% endif %}
    {% if tiktok %}
      {% set tt_link = tiktok %}
      {% if not tiktok.startswith('http') %}{% set tt_link = 'https://tiktok.com/@' + tiktok %}{% endif %}
      <li><a href="{{ tt_link }}" class="text-black flex items-center gap-2"><i class="fab fa-tiktok"></i>TikTok</a></li>
    {% endif %}
  </ul>
</body>
</html>